example : (Ioo (- 1: ‚Ñù) 1) ‚âÖ ‚Ñù :=
{ to_fun := (Œª x, ‚Üëx / (1- abs(‚Üëx))),
  inv_fun := Œª x, ‚ü®x / (1 + abs x), aux_in_interval x‚ü©,
  left_inv := 
  begin
