def left_ray_topology : topological_space ‚Ñù := {
  is_open := left_ray '' univ,
  univ_mem := ‚ü®‚ä§, by tauto‚ü©,
  union :=
  begin
    intros Y hY,
    use Sup (left_ray‚Åª¬π' Y),
    simp [‚ÜêbUnion_left_ray, sUnion_eq_bUnion],
    ext1,
    simp,
